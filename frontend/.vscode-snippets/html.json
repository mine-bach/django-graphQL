{
  // Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  "MyButton": {
    "prefix": "myButton",
    "body": "<my-button :to=\"${1:link}\" text=\"${2:label}\"></my-button>${0}"
  },
  "MyConfirmButton": {
    "prefix": "myConfirmButton",
    "body": "<my-confirm-button @click=\"${1:action}\" text=\"${2:label}\"></my-confirm-button>${0}"
  },
  "MyButtonsContainer": {
    "prefix": "myButtonsContainer",
    "body": [
      "<my-buttons-container>",
			"	${0}",
      "</my-buttons-container>"
    ]
  },
  "MyFormField": {
    "prefix": "myFormField",
    "body": "<my-form-field type=\"${1:type}\" label=\"${2:label}\" v-model=\"form.${3:fieldName}\" :errors=\"props.errors.${3:fieldName}\"></my-form-field>${0}"
  }
}